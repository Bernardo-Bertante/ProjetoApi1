<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/basicstyle.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">

    <title>Clientes</title>
</head>
<body>

    <nav id="main">
        <ul>
            <li> <a href="/"><img src="/image/icons8-pet-80.png" alt="Logo Oficial"></a> </li>
            <li> <a href="/register"><i class="bi bi-person-plus-fill"></i></a> </li>
        </ul>
    </nav>

    <section id="clientsMenu">
        <h1>Clientes</h1>

        <div>
            <table>
                <thead>
                    <tr>
                        <th>Nome</th>
                    </tr>
                </thead>
                <tbody>
                    <% clients.forEach((client) => { %>
                        <tr class="clients"> 
                        
                            <td> <%= client.name %> </td>
                            <td> <a href="/visualiser/<%= client._id %>"><i class="bi bi-eye"></i></a> </td>

                        </tr>
                        <% }) %> 
                </tbody>
            </table>
        </div>
    </section>


   
    
</body>
</html>